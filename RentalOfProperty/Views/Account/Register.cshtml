@using RentalOfProperty.ViewModels;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="pt-2">
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="pt-2">
            <label asp-for="FirstName">Имя</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
        </div>
        <div class="pt-2">
            <label asp-for="LastName">Фамилия</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>
        <div class="pt-2">
            <label asp-for="PhoneNumber">Мобильный телефон</label><br />
            <input type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" />
        </div>
        <div class="pt-2">
            <label asp-for="Password">Пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="pt-2">
            <label asp-for="ConfirmPassword">Подтверждение пароля</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="pt-3">
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>

